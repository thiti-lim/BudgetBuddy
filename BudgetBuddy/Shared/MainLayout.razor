@inherits LayoutComponentBase

<PageTitle>BudgetBuddy</PageTitle>

<MudThemeProvider Theme="CustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<AuthorizeView>
    <Authorized>
        <MudLayout>
            <MudAppBar Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                <MudSpacer />
                <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
            </MudAppBar>
            <MudDrawer @bind-Open="_drawerOpen" Elevation="2" class="py-3">
                    <MudNavMenu Class="mud-width-full">
                        <MudText Typo="Typo.h6" Class="px-4">Budget Buddy</MudText>
                        <MudDivider DividerType="DividerType.Middle" Class="my-2" />
                        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Person">Customers</MudNavLink>
                        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.List">Jobs</MudNavLink>
                        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.AddBox">Add Job</MudNavLink>
                    </MudNavMenu>
            </MudDrawer>
            <MudMainContent>
                @*Body*@
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <div style="height: 100vh; width: 100vw; background-color: #00838F" class="d-flex justify-center align-center">
            <div class="d-flex flex-column justify-center">
                <MudText Style="color: #E0F7FA" Typo="Typo.h6" Align="Align.Center" class="pb-2">EN Program</MudText>
                <MudButton Variant="Variant.Filled" Href="MicrosoftIdentity/Account/SignIn" Color="Color.Primary">Log In</MudButton>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    MudTheme CustomTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = Colors.DeepPurple.Default,
                Background = Colors.Cyan.Lighten3,
            },
            LayoutProperties = new LayoutProperties()
            {
                DrawerWidthLeft = "260px",
                DrawerWidthRight = "300px"
            }
        };
}
